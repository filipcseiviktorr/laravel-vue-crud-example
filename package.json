{
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build --emptyOutDir",
        "dev": "vite",
        "watch": "vite build --watch",
        "lint": "eslint --fix .",
        "prettier": "prettier --write .",
        "lint-staged": "lint-staged",
        "prepare": "husky install"
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.vue": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.ts": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "eslintConfig": {
        "extends": [
            "plugin:vue/vue3-recommended",
            "@vue/eslint-config-prettier"
        ],
        "rules": {
            "vue/multi-word-component-names": "off",
            "vue/no-unused-vars": "warn",
            "vue/no-multiple-template-root": "off"
        }
    },
    "devDependencies": {
        "@types/jquery": "^3.5.32",
        "@vitejs/plugin-vue": "^5.2.1",
        "autoprefixer": "^10.4.20",
        "axios": "^1.7.9",
        "concurrently": "^9.0.1",
        "eslint": "^9.24.0",
        "eslint-config-prettier": "^10.1.1",
        "eslint-plugin-vue": "^10.0.0",
        "husky": "^9.1.7",
        "laravel-vite-plugin": "^1.0",
        "lint-staged": "^15.5.0",
        "postcss": "^8.4.47",
        "prettier": "^3.5.3",
        "tailwindcss": "^3.4.13",
        "vite": "^6.0.8"
    },
    "dependencies": {
        "@mdi/font": "^7.4.47",
        "@primevue/themes": "^4.2.5",
        "filepond": "^4.32.7",
        "filepond-plugin-file-validate-type": "^1.2.9",
        "filepond-plugin-image-preview": "^4.6.12",
        "install": "^0.13.0",
        "jquery": "^3.7.1",
        "npm": "^11.0.0",
        "pinia": "^2.3.1",
        "primeicons": "^7.0.0",
        "primevue": "^4.2.5",
        "vue": "^3.5.13",
        "vue-file-agent": "^1.7.3",
        "vue-filepond": "^7.0.4",
        "vue-loader": "^17.4.2",
        "vue-router": "^4.0.13",
        "vuetify": "^3.7.0-beta.1"
    }
}
